<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ana_layout"
    android:background="@drawable/ana_background"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/vs_human2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ana_player" />

            <Button
                android:id="@+id/vs_human"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="33dp"
                android:layout_weight="2"
                android:text="@string/vs_human"
                android:textColor="@color/ana_ekran_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/vs_computer2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ana_computer" />

            <Button
                android:id="@+id/vs_computer"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="33dp"
                android:layout_weight="2"
                android:text="@string/vs_computer"
                android:textColor="@color/ana_ekran_text"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/online2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ana_online" />

            <Button
                android:id="@+id/online"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="33dp"
                android:layout_weight="2"
                android:text="@string/online_oyna"
                android:textColor="@color/ana_ekran_text"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/settings2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ana_settings" />

            <Button
                android:id="@+id/settings"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="33dp"
                android:layout_weight="2"
                android:text="@string/settings"
                android:textColor="@color/ana_ekran_text"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/introduction2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ana_intro" />

            <Button
                android:id="@+id/introduction"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="33dp"
                android:layout_weight="2"
                android:text="@string/introduction"
                android:textColor="@color/ana_ekran_text"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>